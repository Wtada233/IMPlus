<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/settings_title"
        android:textSize="24sp"
        android:textStyle="bold"
        android:layout_marginBottom="24dp" />

    <!-- Keyboard Height -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pref_height_title"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seekbar_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="50"
            android:progress="35" />

        <TextView
            android:id="@+id/tv_height_val"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="35%" />
    </LinearLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pref_height_summary"
        android:textSize="12sp"
        android:alpha="0.7"
        android:layout_marginBottom="16dp" />

    <!-- Candidate Bar Height -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pref_candidate_height_title"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seekbar_candidate_height"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="80"
            android:progress="48" />

        <TextView
            android:id="@+id/tv_candidate_height_val"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="48dp" />
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="滑动灵敏度 (越小越灵敏)"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <SeekBar
            android:id="@+id/seekbar_swipe_threshold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:max="200"
            android:progress="50" />

        <TextView
            android:id="@+id/tv_swipe_threshold_val"
            android:layout_width="48dp"
            android:layout_height="wrap_content"
            android:gravity="end"
            android:text="50px" />
    </LinearLayout>

    <!-- Language Specific Settings -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="语言相关设置"
        android:textStyle="bold"
        android:layout_marginTop="16dp" />

    <Spinner
        android:id="@+id/spinner_languages"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_marginTop="8dp" />

    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_pc_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="启用 PC 布局 (五行)"
        android:layout_marginTop="8dp" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="24dp" />

    <!-- Close on outside click -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/switch_close_outside"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/pref_close_outside"
        android:layout_marginBottom="16dp" />

</LinearLayout>
