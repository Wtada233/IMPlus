<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp"
    android:gravity="center_horizontal">

    <!-- 顶部栏：包含语言切换 -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <ImageView
            android:id="@+id/btn_language"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:layout_gravity="end|center_vertical"
            android:src="@android:drawable/ic_menu_more"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="@string/language_menu_title" />
    </FrameLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_title"
        android:textSize="28sp"
        android:textStyle="bold"
        android:layout_marginTop="8dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/welcome_subtitle"
        android:layout_marginTop="8dp"
        android:alpha="0.7" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- 步骤 1: 启用 -->
    <Button
        android:id="@+id/btn_enable_ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_1_enable"
        style="@style/Widget.Material3.Button" />

    <!-- 步骤 2: 选中 -->
    <Button
        android:id="@+id/btn_select_ime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/step_2_select"
        android:layout_marginTop="16dp"
        style="@style/Widget.Material3.Button.TonalButton" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="32dp" />

        <TextView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:text="@string/test_input_label"

            android:textSize="14sp"

            android:layout_marginBottom="8dp" />

    

        <!-- Material 风格的输入框 -->

            <com.google.android.material.textfield.TextInputLayout

                android:layout_width="match_parent"

                android:layout_height="wrap_content"

                style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

        

                <com.google.android.material.textfield.TextInputEditText

                    android:id="@+id/et_test"

                    android:layout_width="match_parent"

                    android:layout_height="wrap_content"

                    android:hint="@string/test_input_hint" />

        

                </com.google.android.material.textfield.TextInputLayout>

        

            

        

                <Button

        

                    android:id="@+id/btn_open_settings"

        

                    android:layout_width="match_parent"

        

                    android:layout_height="wrap_content"

        

                    android:text="@string/open_settings"

        

                    android:layout_marginTop="24dp"

        

                    style="@style/Widget.Material3.Button.OutlinedButton" />

        

            

        

            </LinearLayout>

        

            

        

    